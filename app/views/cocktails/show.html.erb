<div class="wrapper">
  <div class="container">
    <div class="rounded-box">
      <div class="title">
        <h1><%= @cocktail.name %></h1>
      </div>

      <h4>Doses:</h4>

      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %> - <%= dose.description %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

<%= link_to "Back", cocktails_path %>
